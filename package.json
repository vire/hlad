{
  "name": "hlad",
  "version": "0.2.0",
  "description": "Hlad crawler is a small utility to crawl webpages for lunch menus and post them to an REST endpoint.",
  "engines": {
    "node": ">=6.0.0",
    "npm": "^3.0.0"
  },
  "scripts": {
    "agent": "ts-node index.ts",
    "agent:debug": "DEBUG=hlad-* npm run agent",
    "compile": "tsc --outDir dist",
    "lint": "tslint -c tslint.json src/**.ts",
    "postinstall": "./node_modules/.bin/typings install && npm run compile",
    "start": "npm run agent",
    "test": "NODE_ENV=test mocha --require ts-node/register ./src/**/*.spec.ts",
    "tester": "DEBUG=recipe-tester babel-node recipe-tester.js"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:vire/hlad.git"
  },
  "keywords": [
    "hlad",
    "rxjs",
    "crawler",
    "firebase",
    "agemt"
  ],
  "author": "viliam.elischer@gmail.com",
  "license": "MIT",
  "dependencies": {
    "@reactivex/rxjs": "^5.0.0-beta.5",
    "cheerio": "^0.22.0",
    "dotenv": "^2.0.0",
    "firebase": "2.4.1",
    "isomorphic-fetch": "^2.2.1",
    "ts-node": "^1.3.0",
    "tslint": "^3.15.1",
    "typescript": "^1.8.10"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.13.2",
    "babel-preset-es2015": "^6.13.2",
    "chai": "^3.2.0",
    "debug": "^2.2.0",
    "mocha": "^3.0.2",
    "sinon": "^1.17.4",
    "typings": "^1.1.0"
  }
}
